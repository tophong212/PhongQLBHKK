<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/hinhnen"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bgr" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDD9D9"
        android:gravity="center"
        android:text="Hãy chọn một chức năng"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imbtn_MatHang"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="#8BF0ECEC"
                android:scaleType="fitCenter"
                android:src="@drawable/mathang" />

            <ImageButton
                android:id="@+id/imbtn_SanPham"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="#8BF0ECEC"
                android:scaleType="fitCenter"
                android:src="@drawable/bgr3" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Mặt hàng"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sản phẩm"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imbtn_NhanVien"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="#48F0ECEC"
                android:scaleType="fitCenter"
                android:src="@drawable/nhanvien" />

            <ImageButton
                android:id="@+id/imbtn_NhaCungCap"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="#00F0ECEC"
                android:scaleType="fitCenter"
                android:src="@drawable/qlncc" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nhân viên"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nhà cung cấp"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imbtn_HoaDon"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="#8BF0ECEC"
                android:scaleType="fitCenter"
                android:src="@drawable/hoadon" />

            <ImageButton
                android:id="@+id/imbtn_ThongKe"
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:background="#002196F3"
                android:scaleType="fitCenter"
                android:src="@drawable/thongke" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Hóa đơn"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Thống kê"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>
</LinearLayout>